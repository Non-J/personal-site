---
export interface Props {
	text: string;
	href: string;
	decoration?: boolean;
	noWrap?: boolean;
	className?: string;
}
const { text, href, className, noWrap = true, decoration = true } = Astro.props;
---

<a
	class={'underline text-red-200/90 w-max' +
		(noWrap ? ' whitespace-nowrap' : '') +
		(className ? ` ${className}` : '')}
	href={href}>{decoration ? `[ ${text} ]` : text}</a
>
